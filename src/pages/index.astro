---
import socials from '../../data/socials.json'
---

<html>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/favicon/animated.gif" type="image/gif">
		<link rel="icon" href="/favicon/static.ico" type="image/x-icon">
		<meta name="viewport" content="width=device-width" />
		<title>titsex</title>
	</head>
	<body class="bg-black text-white flex flex-col gap-5 items-center">
		<h1 class="text-6xl mt-24">titsex</h1>

		<div class="grid grid-cols-2 lg:grid-cols-3 gap-5 mt-24 lg:mt-16">
			{socials.map((social) => <div>
				<a href={social.link} class="flex flex-col items-center" target="_blank">
					<svg class="w-14 h-14 lg:w-18 lg:h-18" set:html={social.icon}></svg>
					<h2>{social.title}</h2>
				</a>
			</div>)}
		</div>
	</body>
</html>
